#forecast-budget-content
  padding 10px

.modify-regular-operation, .remove-regular-operation
  cursor pointer

.input-small, .input-simple
  margin-right 5px
.input-small
  width 110px

.input-simple
  width 200px

.add-regular-operation-container
  text-align center
  padding 10px

.btn-orange
   background-color #F08C56
   color #FFF

.text-navy
  color #3276b1

#regular-op-exists
  display none
  font-size 0.8em

.highlighted-rule td
  background-color #f5f5f5

#regular-operations tr td:nth-child(1), #regular-operations tr td:nth-child(2)
  cursor pointer

#regular-operations-budget td
  border-top 1px solid #f1f1f1

.light-info, #regular-op-light-info
  color #999
  font-style italic
  font-size 0.8em
  display block
  padding 10px 0

#regular-op-light-info
  padding 5px 0
  line-height 15px

#forecast-budget-content table
  margin-bottom 20px

