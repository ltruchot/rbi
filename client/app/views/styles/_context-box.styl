#context-box .table > tbody > tr.success > td
  background-color #dff0d8

.iconCostType
  cursor pointer

.popup-fixed-cost
  border 1px solid #ddd
  position absolute
  top 0
  right 0
  background-color #fff
  z-index 999
  padding 5px 15px 40px 10px
  width 300px
  text-align left
  font-size 0.9em
  box-shadow 0 5px 10px

.popup-fixed-cost .iconCostType
  position absolute
  top 5px
  right 5px

#save-fixed-cost, #remove-fixed-cost
  position absolute
  bottom 10px
  right 40px
#cancel-fixed-cost
  position absolute
  bottom 10px
  left 20px

.fixed-cost-title
  font-weight bold
  display block
  color #3276b1

.popup-fixed-cost label, .popup-fixed-cost input
  font-weight normal
  display inline

.not-displayed-cost
  display none

