#context-box
  border 1px solid #2b2b2b

#context-box h2
  margin 0
  font-size 1.4em
  text-align center

#context-box h3
  margin 0
  margin-bottom 10px
  font-size 1.2em
  text-align center

#context-box .dataTable
  margin-top 15px
  font-size 0.9em

#context-box .table > tbody > tr > td
  border-left 0
  border-right 0
  position relative

#context-box .table > tbody > tr > td:first-child
  border-left 1px solid #dddddd
#context-box .table > tbody > tr > td:last-child
  border-right 1px solid #dddddd

#context-box .table > tbody > tr.special > td
  background-color #2b2b2b
  color #fff
  border 1px solid #ddd

