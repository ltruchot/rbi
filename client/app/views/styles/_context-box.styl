#context-box
  border 1px solid #2b2b2b
  height 600px
  display none
  overflow hidden
  padding 0
  margin 0

.context-box-header, .context-box-header-bigger
  padding 0 15px 10px 15px
  margin 0
  height 90px
  border-bottom 1px #999 solid

.context-box-header-bigger
  height 140px

.context-box-content, .context-box-content-smaller
  height 500px
  padding 15px 15px 0 15px
  margin 0
  overflow auto
  box-shadow:inset 3px 3px 7px 1px rgba(0, 0, 0, 0.1)

.context-box-content-smaller
  height 450px

#context-box h2
  margin 5px
  font-size 1.4em
  text-align center

#context-box h3
  margin 0
  margin-bottom 10px
  font-size 1.2em
  text-align center

#context-box .dataTable
  font-size 0.9em

#context-box .table > tbody > tr > td
  border-left 0
  border-right 0
  position relative

#context-box .table > tbody > tr > td:first-child
  border-left 1px solid #dddddd
#context-box .table > tbody > tr > td:last-child
  border-right 1px solid #dddddd

#context-box .table > tbody > tr.special > td
  background-color #999
  line-height 0.6
  font-weight bold
  color #fff
  border 1px solid #999

