// Layout

.layout-container
    width 940px

.layout-centered
    margin 0 auto

.layout-left
    float left

.layout-right
    float right

.layout-to-left
    left auto
    right 0

.layout-to-right
    right auto
    left 0

#interface-box h1
  background-color #f1f1f1
  min-height 30px
  color #2b2b2b
  text-align center
  text-transform uppercase
  font-size 1.4em
  padding 3px 0
  margin 0

#mainnav *
  padding-right 0
  margin-right 0

#mainnav ul li .current-arrow
  right 0
  top 35px

.view-container
  padding-left 85px
  margin-top 45px

.view-container .row
  margin 0

.view-container #account-choice
  padding 10px

.blue-text
  color #40acd6
.orange-text
  color #fac567

.month-switcher
  cursor pointer
.previous-month
  margin-left 15px
.next-month
  margin-right 15px

#monthly-report tr td
  padding 14px
  border 1px solid #f1f1f1
  border-left 0

#monthly-report tr:last-child td
  border-bottom 0
#monthly-report .amount-month
  width 50%
  text-align center

#monthly-report .amount-month > div
  display inline
  margin auto
  text-align center
  text-transform uppercase
  color #555
  font-size 0.6em
  font-weight bold

#monthly-report .amount-month > div > hr
  margin 1px 25px
  border-top 2px solid #eeeeee

#monthly-report .amount-month .amount-number
  font-size 2.3em
  font-weight normal

#monthly-report .amount-month .amount-number-diff
  font-size 2em
  font-weight normal

#pie_chart div
  width auto !important

