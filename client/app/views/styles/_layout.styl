.container
  position relative
  padding 0

.container header
  padding-top 15px

.main-container
  padding 0
  margin 0

#mainnav
  // padding-left: 85px;
  margin-top: 25px;

#mainnav *
  padding-right 0
  margin-right 0

#mainnav ul li .current-arrow
  right -15px
  top 32px

.view-container
  // padding-left 85px
  margin-top 25px
  padding 0

.view-container .row
  margin 0

.view-container #account-choice
  padding 10px

.blue-text
  color #40acd6
.red-text
  color #f74e4d
.orange-text
  color #fac567

.month-switcher
  cursor pointer
.previous-month
  margin-left 15px
.next-month
  margin-right 15px

#monthly-report tr td
  padding 14px
  border 1px solid #f1f1f1
  border-left 0

#monthly-report tr:last-child td
  border-bottom 0
#monthly-report .amount-month
  width 50%
  text-align center

#monthly-report .amount-month > div
  display inline
  margin auto
  text-align center
  text-transform uppercase
  color #555
  font-size 0.6em
  font-weight bold

#monthly-report .amount-month > div > hr
  margin 1px 25px
  border-top 2px solid #eeeeee

#monthly-report .amount-month .amount-number
  font-size 2.3em
  font-weight normal

#monthly-report .amount-month .amount-number-diff
  font-size 2em
  font-weight normal

