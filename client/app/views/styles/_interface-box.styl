#interface-box
  padding-left 0


#interface-box h1
  border-right 1px solid #f1f1f1
  background-color #f1f1f1
  height 30px
  color #2b2b2b
  text-align center
  text-transform uppercase
  font-size 1.4em
  padding 3px 0
  margin 0
  width 100%

.interface-box-content
  border none
  border-right 1px solid #f1f1f1
  border-bottom 1px solid #f1f1f1
  width 100%
  height 570px
  overflow auto
  padding 0
  margin 0


.plain-icon-blue
  color #fff
  background-color #40acd6
  padding 2px 6px 1px 6px
  font-size 14px
  line-height 0.9
  margin-right 1px

.plain-icon-red
  color #fff
  background-color #f74e4d
  padding 2px 6px 1px 6px
  font-size 14px
  line-height 0.9
  margin-right 1px

.plain-icon-blue:before, .plain-icon-red:before
  font-size 14px

#monthly-report
  width 100%


.search-panel
  margin 0
  padding 0

.search-btn-container
  margin 0
  padding 0
.search-btn
  // min-width 150px
  height 50px
  color #fff
  display block
  border none
  padding 5px
  cursor pointer
  position relative
  margin 0 5px


.grey1
  background-color #E0E0E0

.grey2
  background-color #B0B0B0

.grey3
  background-color #808080

.grey4
  background-color #505050

.search-btn span
  display block

.search-field
  background-color #f1f1f1
  width 100%
  border 0
  border-radius 10px
  padding 0
  height 25px
  position relative

.search-field #search-text
  background-color #f1f1f1
  width 100%
  border 0
  border-radius 10px
  display block
  height 25px
  padding-left 20px
  padding-right 10px


.search-field #search-text:focus
  border 0
  outline-offset 0
  outline none

.search-field .icon-search
  display block
  float left
  margin-right 5px
  position absolute
  top 3px
  left 5px

.big-size-icon
  font-size 1.4em
  padding 2px 0 0 5px
.big-size-icon:before
  font-size 1.4em

.big-size-text
  font-size 1.2em
  font-weight bold

.little-size-text
  font-size 0.9em
  position absolute
  bottom 5px
  right 5px

// .google-pie-chart svg, .google-pie-chart div
//   padding-bottom 10px !important

.search-panel-td1
  border-bottom 0 !important
.search-panel-td2
  border-top 0 !important

#monthly-report > tbody > tr > td
  padding 14px
  border 1px solid #f1f1f1
  border-left 0

#monthly-report > tbody > tr:last-child > td
  border-bottom none

#monthly-report > tbody > tr > td:last-child
  border-right none

#monthly-report .amount-month
  width 50%
  text-align center

#monthly-report .amount-month > div
  display inline
  margin auto
  text-align center
  text-transform uppercase
  color #555
  font-size 0.6em
  font-weight bold

#monthly-report .amount-month > div > hr
  margin 1px 25px
  border-top 2px solid #eeeeee

#monthly-report .amount-month .amount-number
  font-size 2.3em
  font-weight normal

#monthly-report .amount-month .amount-number-diff
  font-size 2em
  font-weight normal